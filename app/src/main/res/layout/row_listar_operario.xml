<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorfondoactivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/row_nombre"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cristopher"/>

            <TextView
                android:id="@+id/row_paterno"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Torres"/>

            <TextView
                android:id="@+id/row_materno"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Martinez"/>

        </LinearLayout>
        <TextView
            android:layout_marginBottom="3dp"
            android:id="@+id/row_dni"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="72920465"/>



    </LinearLayout>

</LinearLayout>